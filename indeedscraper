from bs4 import BeautifulSoup
import requests
from random import random
from time import sleep
from email.message import EmailMessage
from collections import namedtuple
import smtplib
import csv

def Turl(position, location, dateposted):
   
    template = 'https://ca.indeed.com/jobs?q=Summer+Internship&l=Mississauga%2C+ON&fromage=3'
    position = position.replace(' ', '+')
    location = location.replace(' ', '+')
    dateposted = dateposted.replace(' ', '+')
    url = template.format(position, location, dateposted)
    return url

url = Turl('Summer Intern', 'Mississauga ON', '2')

repsone = requests.get(url)